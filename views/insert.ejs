    border: 1px solid;
    font-family: 'Barlow', sans-serif;
    font-size: 1em;
    border-radius: .2em;
}
.d-flex{
    display: flex;
    flex-wrap: wrap;
}

.justify-between{
    justify-content: space-between;
}

.text-center{
    text-align: center;
}
.filter{
    background: #F9F9F9;
    border: 1px solid;
    height: 20px;
    border-radius: 0.2em;
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    text-align: center;
}
.filter:hover{
    background-color: grey;
}





</style>
<body>
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/view" style="text-decoration: none; color: black; padding: 10px 10px 0px 10px;">View all Invoices</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Invoice</h2>
            <span class="text-light">Fill the below form to create a new invoice</span>
        </div>

    <form action="/addinvoice" method="POST" id="add_user">
        <div class="new_user">
            <div class="form-group">
                <label for="name" class="text-light">Store Name</label>
                <input type="text" name="storename" value="">
            </div>
            <div class="form-group">
                <label for="number" class="text-light">Store Address</label>
                <input type="text" name="storeaddress" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Store phone</label>
                <input type="text" name="storephone" value="">
            </div>

            <div class="form-group">
                <label for="phone" class="text-light">Store Email</label>
                <input type="text" name="storeemail" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Buyer name</label>
                <input type="text" name="buyername" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Buyer phone</label>
                <input type="text" name="buyerphone" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Date</label>
                <input type="text" name="date" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Time</label>
                <input type="text" name="time" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Item name</label>
                <input type="text" name="itemname" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Quantity</label>
                <input type="text" name="quantity" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Price per item</label>
                <input type="text" name="priceperitem" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Discount</label>
                <input type="text" name="discount" value="">
            </div>

            <div class="form-group">
                <label for="phone" class="text-light">GST</label>
                <input type="text" name="gst" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Total amount per item</label>
                <input type="text" name="taperitem" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Total amount</label>
                <input type="text" name="ta" value="">
            </div>
            <div class="form-group">
                <label for="phone" class="text-light">Write whether paid or unpaid</label>
                <input type="text" name="status" value="">
            </div>
           
            
    
