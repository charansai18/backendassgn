<!DOCTYPE html>
<head>
    <title>Upbringo</title>
</head>
<style>
    .container {
  max-width: 400px;
  width: 100%;
  margin: 0 auto;
  position: relative;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  padding-top: 40px;
}
    #add_user{
        background: #F9F9F9;
        padding: 25px;
        margin: 10px 0;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    }
    #add_user .form-group{
        margin-top: 10px;
    }
    #add_user .form-group input[type="text"]{
    width: 60%;
    padding: .6em 1em;
    margin: .5em 0;
    border: 1px solid;
    font-family: 'Barlow', sans-serif;
    font-size: 1em;
    border-radius: .2em;
}
.d-flex{
    display: flex;
    flex-wrap: wrap;
}

.justify-between{
    justify-content: space-between;
}

.text-center{
    text-align: center;
}
.btn
{
    background: #F9F9F9;
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    font-size: large;
}
.btn:hover
{
    background-color: gray;
}
.save
{
    padding-left: 11em;
}
</style>
<body>
    <div class="container">
        <div class="form-title text-center">
            <h2 class="text-dark">Update Invoice</h2>
            <span class="text-light">Change below data to update invoice</span>
        </div>
    <% if(data.length){
 
        for(var i = 0; i< data.length; i++) { %>
            
    <form action="../updateinvoices/<%=data[i].id%>" method="POST" id="add_user">
        <div class="new_user">
                    <div class="form-group">
                        <label for="name" class="text-light">Store Name</label>
                        <input type="text" name="storename" value="<%= data[i].storename%>">
                    </div>
                    <div class="form-group">
                        <label for="number" class="text-light">Store Address</label>
                        <input type="text" name="storeaddress" value="<%= data[i].storeaddress%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Store phone</label>
                        <input type="text" name="storephone" value="<%= data[i].storephone%>">
                    </div>
        
                    <div class="form-group">
                        <label for="phone" class="text-light">Store Email</label>
                        <input type="text" name="storeemail" value="<%= data[i].storeemail%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Buyer name</label>
                        <input type="text" name="buyername" value="<%= data[i].buyername%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Buyer phone</label>
                        <input type="text" name="buyerphone" value="<%= data[i].buyerphone%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Date</label>
                        <input type="text" name="date" value="<%= data[i].date%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">time</label>
                        <input type="text" name="time" value="<%= data[i].time%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Item name</label>
                        <input type="text" name="itemname" value="<%= data[i].itemname%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Quantity</label>
                        <input type="text" name="quantity" value="<%= data[i].quantity%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Price per item</label>
                        <input type="text" name="priceperitem" value="<%= data[i].priceperitem%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Discount</label>
                        <input type="text" name="discount" value="<%= data[i].discount%>">
                    </div>
        
                    <div class="form-group">
                        <label for="phone" class="text-light">GST</label>
                        <input type="text" name="gst" value="<%= data[i].gst%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Total amount per item</label>
                        <input type="text" name="taperitem" value="<%= data[i].taperitem%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Total amount</label>
                        <input type="text" name="ta" value="<%= data[i].ta%>">
                    </div>
                    <div class="form-group">
                        <label for="phone" class="text-light">Write whether paid or unpaid</label>
                        <input type="text" name="status" value="<%= data[i].status%>">
                    </div>
                   
                    
            
                    <!-- <div class="form-group">
                        <label for="gender" class="text-light">Status</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-4" name="status" value="Active" >
                            <label for="radio-4" class="radio-label">Active</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-5" name="status" value="Inactive" >
                            <label for="radio-5" class="radio-label">Inactive</label>
                        </div>
                    </div> -->
                    
            
                    <div class="save">
                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Save</button>
                        </div>
                    </div>
            
                
            <% } %>
    <% } %> 
        </div>
    </form>

   
</body>
</html>