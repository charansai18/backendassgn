<!DOCTYPE html>
<head>
    <title>Upbringo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<style>
  #site-main{
    margin-top: 6em;
    font-family: 'Barlow', sans-serif;
}
.table
{
  margin-top: 4em;
}
.filter{
    background: #F9F9F9;
    border: 1px solid;
    width: 10%;
    height: 25px;
    border-radius: 0.2em;
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    text-align: center;
}
.filter:hover{
    background-color: grey;
}
</style>
<body>
    <main id="site-main">
     <center><div class="filter">
        <a href="/insert" style="text-decoration: none; color: black; padding: 10px 10px 0px 10px;">Add New Invoice</a>
    </div></center>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">store name</th>
                <th scope="col">store address</th>
                <th scope="col">store phone</th>
                <th scope="col">store email</th>
                <th scope="col">buyer name</th>
                <th scope="col">buyer phone</th>
                <th scope="col">date</th>
                <th scope="col">time</th>
                <th scope="col">Item name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price / item</th>
                <th scope="col">Discount</th>
                <th scope="col">GST</th>
                <th scope="col">total amount / item</th>
                <th scope="col">total amount</th>
                <th scope="col">Status</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% if(data.length){
                  
                    for(var i = 0; i< data.length; i++) {%>  
                    <tr>
                      <th scope="row"><%= (i+1) %></th>
                      <td><%= data[i].storename%></td>
                      <td><%= data[i].storeaddress%></td>
                      <td><%= data[i].storephone%></td>
                      <td><%= data[i].storeemail%></td>
                      <td><%= data[i].buyername%></td>
                      <td><%= data[i].buyerphone%></td>
                      <td><%= data[i].date%></td>
                      <td><%= data[i].time%></td>
                      <td><%= data[i].itemname%></td>
                      <td><%= data[i].quantity%></td>
                      <td><%= data[i].priceperitem%></td>
                      <td><%= data[i].discount%></td>
                      <td><%= data[i].gst%></td>
                      <td><%= data[i].taperitem%></td>
                      <td><%= data[i].ta%></td>
                      <td><%= data[i].status%></td>
                      <td><a class="btn btn-success delete" href="../getbyid/<%=data[i].id%>">update</a></td>
                      <td><a class="btn btn-success edit" href="../deleteinvoices/<%=data[i].id%>">delete</a></td>
                    </tr>
                    <% }
                             
                     }else{ %>
                         <tr>
                            <td colspan="3">No user</td>
                         </tr>
                      <% } %> 
            </tbody>
          </table>
    </main>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>